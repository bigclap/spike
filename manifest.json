{
  "manifest_version": 3,
  "name": "HH.ru Vacancy Scorer",
  "version": "1.0",
  "description": "Analyzes hh.ru vacancies using a local vLLM.",
  "permissions": [
    "storage",
    "scripting",
    "downloads",
    "activeTab"
  ],
  "host_permissions": [
    "https://hh.ru/*",
    "http://localhost/*"
  ],
  "options_page": "options.html",
  "background": {
    "service_worker": "llm_service.js"
  },
   "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
